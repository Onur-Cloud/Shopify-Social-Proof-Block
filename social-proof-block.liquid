{
  "type": "social_proof",
  "name": "Social Proof",
  "limit": 1,
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First Image",
      "default": "jack-finnigan-rriAI0nhcbc-unsplash_1.webp"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second Image",
      "default": "jake-nackos-IF9TK5Uy-KI-unsplash_1.webp"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 20,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Image Width",
      "default": 50
    },
    {
      "type": "text",
      "id": "names",
      "label": "Names",
      "default": "Michael, Hannah"
    },
    {
      "type": "checkbox",
      "id": "show_verified_icon",
      "label": "Show Verified Icon",
      "default": true
    },
    {
      "type": "text",
      "id": "proof_text",
      "label": "Text",
      "default": "love this product"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font Size",
      "default": 12
    },
    {
      "type": "select",
      "id": "background_color",
      "label": "Background Color",
      "options": [
        {
          "value": "transparent",
          "label": "Transparent"
        },
        {
          "value": "#FFFFFF",
          "label": "White"
        },
        {
          "value": "#000000",
          "label": "Black"
        },
        {
          "value": "#F0F0F0",
          "label": "Light Gray"
        }
      ],
      "default": "transparent"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Border Radius",
      "default": 5
    }
  ]
}
