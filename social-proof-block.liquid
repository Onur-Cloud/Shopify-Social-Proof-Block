<div class="social-proof-banner" {{ block.shopify_attributes }} style="
  {{ bg_style }}
  color: {{ block.settings.text_color }};
  font-size: {{ block.settings.font_size }}px;
  padding: {{ block.settings.padding }}px;
  border-radius: {{ block.settings.border_radius }}px;
  display: flex;
  align-items: center;
  margin-bottom: 10px;
">
  <div class="social-proof-images" style="position: relative; width: {{ block.settings.image_width | plus: 15 }}px; height: {{ block.settings.image_width }}px; margin-right: 5px;">
    {% if block.settings.image_1 != blank %}
      <img src="{{ block.settings.image_1 | img_url: '100x100', crop: 'center' }}" alt="" style="
        width: {{ block.settings.image_width }}px;
        height: {{ block.settings.image_width }}px;
        border-radius: 50%;
        position: absolute;
        left: 0;
        top: 0;
        z-index: 1;
      ">
    {% endif %}
    {% if block.settings.image_2 != blank %}
      <img src="{{ block.settings.image_2 | img_url: '100x100', crop: 'center' }}" alt="" style="
        width: {{ block.settings.image_width }}px;
        height: {{ block.settings.image_width }}px;
        border-radius: 50%;
        position: absolute;
        left: 15px;
        top: 0;
        z-index: 2;
      ">
    {% endif %}
  </div>
  <div class="social-proof-content" style="display: flex; align-items: center; margin-left: -5px;">
    <span class="social-proof-influencer" style="margin-right: 5px;">
      <strong>{{ block.settings.names }}</strong>
    </span>
    {% if block.settings.show_verified_icon %}
